{
    "name": "spray-wrtc",
    "version": "2.0.0",
    "author": "Chat-Wane <grumpy.chat.wane@gmail.com>",
    "description": "Adaptive random peer sampling protocol running on top of WebRTC",
    "main": "./lib/spray.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/chat-wane/spray-wrtc.git"
    },
    "keywords": [
        "Random Peer Sampling",
        "Adaptive",
        "browser-to-browser communication",
        "WebRTC"
    ],
    "dependencies": {
        "lodash": "^4.17.4",
        "debug": "^2.6.1",
        "n2n-overlay-wrtc": "git://github.com/ran3d/n2n-overlay-wrtc.git#merging"
    },
    "bundledDependencies": [
        "lodash",
        "debug",
        "n2n-overlay-wrtc"
    ],
    "devDependencies": {
        "ava": "0.18.x",
        "browserify": "6.2.x",
        "esdoc": "^0.5.2",
        "esdoc-node": "^1.0.1",
        "nyc": "10.1.x"
    },
    "scripts": {
        "debug": "browserify -r ./lib/spray.js:spray-wrtc --debug > build/spray-wrtc.bundle.debug.js",
        "build": "browserify -r ./lib/spray.js:spray-wrtc > build/spray-wrtc.bundle.js",
        "esdoc": "esdoc && npm run esdoc:example",
        "esdoc:example": "cp -R ./build ./example ./docs",
        "test": "npm run all",
        "ava": "ava -v",
        "watch": "ava -v --watch",
        "coverage": "nyc ava",
        "all": "npm run debug && npm run build && npm run ava && npm run esdoc"
    },
    "license": "MIT"
}
